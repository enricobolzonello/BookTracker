<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="libraryFragment"
            type="com.unipd.booktracker.fragments.LibraryFragment" />
    </data>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/content_margin"
        android:clickable="true"
        app:cardElevation="@dimen/card_elevation"
        app:contentPadding="@dimen/content_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_book_thumbnail"
                android:layout_width="@dimen/thumb_prev_width"
                android:layout_height="@dimen/thumb_prev_height"
                android:contentDescription="@string/thumb_description"
                android:src="@drawable/default_thumbnail" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/content_margin"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_book_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="@string/title_placeholder"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_book_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/author_placeholder"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

                <ProgressBar
                    android:id="@+id/pb_read"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:max="100"
                    android:min="0"
                    android:progress="10" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_book_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/state_description"
                android:src="@drawable/ic_baseline_done_24"
                android:visibility="invisible" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>