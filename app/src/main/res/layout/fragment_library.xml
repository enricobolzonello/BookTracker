<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LibraryFragment">

    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        app:chipSpacingHorizontal="@dimen/content_margin">

        <com.google.android.material.chip.Chip
            android:id="@+id/ch_read"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="@string/filter_read"
            android:checked="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/ch_in_reading"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="@string/filter_in_reading"
            android:checked="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/ch_not_read"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="@string/filter_not_read"
            android:checked="true"/>

    </com.google.android.material.chip.ChipGroup>

</FrameLayout>